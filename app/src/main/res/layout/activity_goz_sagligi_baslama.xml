<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anaSayfaBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".RenkKoru.RenkKoruTestiActivity">

    <!-- Diğer bileşenler -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="126dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Göz Sağlığı Testi Hakkında"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="372dp"
        android:layout_height="140dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="305dp"
        android:textStyle="italic"
        android:textColor="#808080"
        android:text="Göz testi, çeşitli göz hastalıklarını teşhis etmek veya ayırt etmek için yapılır. Aynı zamanda rutin tarama amaçlı da kullanılabilir. Göz testi için çeşitli cihazlar ve aletlerden faydalanılır. Uzak ve yakın mesafede harfler, renkler, yanıp sönen şekiller yardımıyla göz testi değerlendirilir. Hastanın genel göz durumu tespit edilir, varsa hastalık teşhis ve takibi yapılır.Göz testi, görme kusurlarından miyop, hipermetrop ve astigmatı tespit etmek için yapılır."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="126dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Nasıl Uygulanır ?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="400dp"
        android:layout_height="97dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="5dp"
        android:textColor="#808080"
        android:textStyle="italic"
        android:text="Günlük hayatınızda kullandığınız gözlük veya kontakt lens varsa lütfen bu test için kullanmayın. Telefonunuzu kolunuz gergin olacak şekilde göz hizanızda tutun. Ekranda belirecek farklı renk ve büyüklükteki dairelerden oluşan şeklin içerisindeki harfi okumaya çalışın."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/highlightedNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFCC"
        android:padding="10dp"
        android:text="İlk altı soruyu sol gözünüzü kapatarak yapınız. 6. sorudan sonrası için ise sağ gözünüzü kapatarak yapınız."
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/baslaBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/baslaBtn"
        android:layout_width="235dp"
        android:layout_height="43dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="#6699CC"
        android:text="Teste Başla"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
