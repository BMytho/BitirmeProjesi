<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anaSayfaBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="@drawable/bg"
    tools:context=".RenkKoru.RenkKoruResultActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Sonuç"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/iv_thropy"
        android:layout_width="280dp"
        android:layout_height="294dp"
        android:backgroundTint="#0000"
        android:contentDescription="image"
        android:src="@drawable/doc" />

    <TextView
        android:id="@+id/tv_congratualations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tebrikler!!"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Skorunuz 10/10"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bilgilendirme : Bu test tamamen doğru şekilde ölçmemiş olabilir. Herhangi bir
problem olduğunu düşünüyorsanız veya tam şekilde bilgi almak istiyorsanız bir hastaneye başvurunuz."
        android:textColor="#353535"/>
    
    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#456874"
        android:text="Testi Bitir"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>